{{>/layout/header}}
<div class="m-padding-medium mt-3">

  <h1>로그인</h1>
  <hr>

  <!-- 로그인 폼 시작 -->
  <form class="login-box" novalidate>
    <div class="form-group">
      <label>아이디</label>
      <input type="text" class="form-control mt-3" required>
    </div>
    <div class="form-group mt-3">
      <label for="password">비밀번호</label>
      <input type="password" name="password" class="form-control mt-3" id="password" title="password" required>
    </div>
    <div class="form-check mt-3">
      <label class="form-check-label">
        <input id="remember" class="form-check-input" type="checkbox"> Remember me
      </label>
    </div>
    <div class="form-group mt-3">
      <input type="submit" class="btn bg-success text-light" value="로그인">
    </div>
  </form>
  <!-- 로그인 폼 끝 -->

</div>

<!-- 컨테이너 끝 -->
{{>/layout/footer}}