{{>/layout/header}}
<!-- 컨테이너 시작 -->
<div class="m-padding-medium mt-3">

  <h1>회원가입</h1>
  <hr>

  <!-- 회원가입 폼 시작 -->
  <form class="login-box" novalidate>
    <div class="form-group">
      <label>아이디</label>
      <input type="text" class="form-control mt-3" placeholder="username" required>
    </div>
    <div class="form-group mt-3">
      <label for="password">비밀번호</label>
      <input type="password" name="password" class="form-control mt-3" id="password" title="password" required>
    </div>
    <div class="form-group mt-3">
      <label>이메일</label>
      <input type="email" class="form-control mt-3" placeholder="name@example.com" required>
    </div>
    <div class="form-group mt-3">
      <label>성별</label>
      <select class="form-select mt-3" required>
        <option selected>성별</option>
        <option value="male">남자</option>
        <option value="female">여자</option>
        <option value="female">선택안함</option>
      </select>
    </div>
    <div class="form-group mt-3">
      <label>주소</label>
      <input type="text" class="form-control mt-3" minlength="10" data-v-message="Please enter minimum 10 characters"
        required>
    </div>
    <div class="form-group mt-5">
      <input type="submit" class="btn bg-success text-light" value="회원가입">
    </div>
    <!-- 회원가입 폼 끝 -->

</div>

<!-- 컨테이너 끝 -->

{{>/layout/footer}}