{{>/layout/header}}
{{>/blog/layout/blogHeader}}
<!-- 게시판 시작 -->
<div class="m_padding_medium">
  <!-- 게시글 상단부분 시작 -->
  <div class="m_div_flex_between m_padding_bottom_medium">
    <div class="d-flex">
      <!-- 검색버튼 시작 -->
      <form action="/blog/post/search" method="get">
        <input type="hidden" name="board" value="adopt">
        <div class="m_blog_search">
          <div class="d-flex">
            <div class="m_blog_search_detail">
              <select class="form-select" onchange="regionSelect(this.value)" name="region">
                <option value="all">지역</option>
                <option value="서울">서울</option>
                <option value="경기">경기</option>
                <option value="인천">인천</option>
                <option value="강원">강원</option>
                <option value="세종">세종</option>
                <option value="충북">충북</option>
                <option value="충남">충남</option>
                <option value="대전">대전</option>
                <option value="전북">전북</option>
                <option value="전남">전남</option>
                <option value="광주">광주</option>
                <option value="경북">경북</option>
                <option value="대구">대구</option>
                <option value="경남">경남</option>
                <option value="울산">울산</option>
                <option value="부산">부산</option>
                <option value="제주">제주</option>
              </select>
            </div>
            <div class="m_blog_search_detail">
              <select class="form-select" onchange="typeSelect(this.value)" name="type">
                <option value="all">품종</option>
                <option value="강아지">강아지</option>
                <option value="고양이">고양이</option>
                <option value="기타">기타</option>
              </select>
            </div>
          </div>
          <button class="m_search_icon " type="submit">
            <svg style="height: 20px; width: 20px;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
              <!--! Font Awesome Pro 6.1.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. -->
              <path
                d="M500.3 443.7l-119.7-119.7c27.22-40.41 40.65-90.9 33.46-144.7C401.8 87.79 326.8 13.32 235.2 1.723C99.01-15.51-15.51 99.01 1.724 235.2c11.6 91.64 86.08 166.7 177.6 178.9c53.8 7.189 104.3-6.236 144.7-33.46l119.7 119.7c15.62 15.62 40.95 15.62 56.57 0C515.9 484.7 515.9 459.3 500.3 443.7zM79.1 208c0-70.58 57.42-128 128-128s128 57.42 128 128c0 70.58-57.42 128-128 128S79.1 278.6 79.1 208z" />
            </svg>
          </button>
        </div>
      </form>
      <!-- 검색버튼 끝 -->
    </div>
    <!-- 정렬 시작 -->
    <div class="m_blog_btn">
      <form action="/blog/post/search" method="get">
        <input type="hidden" name="board" value="adopt">
        <select class="form-select" name="sort" onchange="this.form.submit()">
          <option selected disabled>정렬</option>
          <option value="new">최신순</option>
          <option value="view">조회순</option>
          <option value="rec">추천순</option>
        </select>
      </form>
    </div>
    <!-- 정렬 끝 -->
  </div>
  <!-- 게시글 상단부분 끝 -->


  <!-- 글목록 시작 -->
  <div class="container mt-3">
    <table class="table m_text_align_center">
      <thead>
        <tr>
          <th>ID</th>
          <th>지역</th>
          <th>품종</th>
          <th>제목</th>
          <th>작성자</th>
          <th>작성일</th>
          <th>조회수</th>
          <th>추천</th>
        </tr>
      </thead>
      <tbody>
        {{#posts}}
        <tr id="test">
          <td>{{id}}</td>
          <td>{{region}}</td>
          <td>{{type}}</td>
          <td>
            <a href="/blog/post/{{id}}" class="m_text_link">{{title}}</a>
          </td>
          <td>{{username}}</td>
          <td>{{createDate}}</td>
          <td>{{view}}</td>
          <td>{{recommended}}</td>
        </tr>
        {{/posts}}
      </tbody>
    </table>
  </div>
  <!-- 글목록 끝 -->

  <!-- 페이징 시작 -->
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      {{#pages.hasPrevious}}
      <li class="page-item">
        <a class="page-link" href="?page={{prevPage}}">이전</a>
      </li>
      {{/pages.hasPrevious}}
      {{^pages.hasPrevious}}
      <li class="page-item disabled">
        <a class="page-link" href="?page={{prevPage}}">이전</a>
      </li>
      {{/pages.hasPrevious}}

      {{#pages.total}}
      <li class="page-item"><a class="page-link" href="?page={{.}}" id="paging">{{.}}</a></li>
      {{/pages.total}}

      {{#pages.hasNext}}
      <li class="page-item">
        <a class="page-link" href="?page={{nextPage}}">다음</a>
      </li>
      {{/pages.hasNext}}
      {{^pages.hasNext}}
      <li class="page-item disabled">
        <a class="page-link" href="?page={{nextPage}}">다음</a>
      </li>
      {{/pages.hasNext}}
    </ul>
  </nav>
  <!-- 페이징 끝 -->


  <!-- 게시글 하단부분 시작 -->
  <div class="m_div_flex_between mt-5">
    <div style="width: 80px;"></div>
    <!-- 제목, 내용, 작성자 검색버튼 시작 -->
    <div class="d-flex">
      <div class="me-3">
        <form class="d-flex" action="/blog/post/search" method="get">
          <input type="hidden" name="board" value="adopt">
          <select class="form-select me-3" onchange="titleSelect(this.value)" name="searchBy">
            <option value="title">제목</option>
            <option value="content">내용</option>
            <option value="username">작성자</option>
          </select>
          <div class="m_blog_search_detail_icon">
            <input type="text" placeholder="검색" name="query" required>
            <button class="m_search_icon" type="submit">
              <svg style="height: 20px; width: 20px;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
                <!--! Font Awesome Pro 6.1.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2022 Fonticons, Inc. -->
                <path
                  d="M500.3 443.7l-119.7-119.7c27.22-40.41 40.65-90.9 33.46-144.7C401.8 87.79 326.8 13.32 235.2 1.723C99.01-15.51-15.51 99.01 1.724 235.2c11.6 91.64 86.08 166.7 177.6 178.9c53.8 7.189 104.3-6.236 144.7-33.46l119.7 119.7c15.62 15.62 40.95 15.62 56.57 0C515.9 484.7 515.9 459.3 500.3 443.7zM79.1 208c0-70.58 57.42-128 128-128s128 57.42 128 128c0 70.58-57.42 128-128 128S79.1 278.6 79.1 208z" />
              </svg>
            </button>
          </div>
        </form>
      </div>

    </div>
    <!-- 제목, 내용, 작성자 검색버튼 끝 -->

    <!-- 글쓰기버튼 시작 -->
    <div class="m_blog_btn">
      <a href="/s/blog/writeForm">
        <button class="btn bg-success text-light">글쓰기</button>
      </a>
    </div>
    <!-- 글쓰기버튼 끝 -->
  </div>
  <!-- 게시글 하단부분 끝 -->

</div>
<!-- 게시판 끝 -->

<script>

</script>